<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>List NV</title>
  <link
    rel="stylesheet"
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
    crossorigin="anonymous"
  />
  <style>
    /* Tùy chỉnh CSS cho sidebar */
    .sidebar {
      height: 100%;
      width: 300px;
      position: fixed;
      top: 0;
      left: 0;
      background-color: black;
      padding-top: 30px;
    }
    .sidebar a {
      padding: 10px 15px;
      text-decoration: none;
      display: block;
      color: white;
    }
    .sidebar a:hover {
      background-color: #d1d1d1;
    }
  </style>
</head>
<body>
  <!-- Sidebar -->
  <div class="sidebar">
    <a href="/home">Home</a>
    <a href="/listnv">Danh sách nhân viên</a>
    <a href="/report">Báo Cáo</a>
    <a href="#" onclick="confirmLogout()">Đăng Xuất</a>
  </div>

  <!-- Content -->
  <div class="container mt-5">
    <div>
      <a href="/add" class="btn btn-info">Thêm mới Nhân viên</a>
      <table class="table bg-success mt-3 ">
        <thead>
          <th>Tên</th>
          <th>Tuổi</th>
          <th>Địa Chỉ</th>
          <th>Email</th>
          <th>ngày làm việc chính thức</th>
          <th>hợp đồng lao động</th> 
          <th>Chức Năng</th>      
        </thead>
        <tbody>
          <% for(var i=0; i<data.length; i++) { %>
            <tr>
              <td><%=data[i].FullName%></td>
              <td><%=data[i].Age%></td>
              <td><%=data[i].Address%></td>
              <td><%=data[i].Email%></td>
              <td><%=data[i].StartDate%></td>
              <td><%=data[i].ContractDocument%></td>             
              <td>
                <a href="/edit/<%=data[i].ID%>" class="btn btn-primary">Sửa</a>
                <a href="/delete/<%=data[i].ID%>" class="btn btn-danger mt-3">Xóa</a><br>
                <a href="/leave/<%=data[i].ID%>" class="btn btn-primary mt-3">Gửi Đơn</a>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
  <script>
    function confirmLogout() {
        var confirmation = confirm("Bạn có chắc chắn muốn đăng xuất?");
        if (confirmation) {
            window.location.href = "/login";
            return false;
        }
    }
    </script>
</body>
</html>
