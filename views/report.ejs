<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>Báo Cáo</title>
  <link
    rel="stylesheet"
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
    crossorigin="anonymous"
  />
  <style>
    /* Tùy chỉnh CSS cho sidebar */
    .sidebar {
      height: 100%;
      width: 0; /* Ban đầu thanh sidebar được ẩn */
      position: fixed;
      top: 0;
      left: 0;
      background-color: black;
      padding-top: 30px;
      transition: 0.5s; /* Thêm hiệu ứng transition */
      overflow-x: hidden; /* Ngăn chặn scroll ngang khi sidebar mở */
    }
    .sidebar a {
      padding: 10px 15px;
      text-decoration: none;
      display: block;
      color: white;
    }
    .sidebar a:hover {
      background-color: #d1d1d1;
    }
  </style>
</head>
<body>
  <!-- Nút mở sidebar -->
  <button class="openbtn mt-5 ml-5" onclick="openSidebar()">☰ Menu</button>

  <!-- Sidebar -->
  <div class="sidebar" id="sidebar">
    <a href="/home">Home</a>
    <a href="/listnv">Danh sách nhân viên</a>
    <a href="/report">Báo Cáo</a>
    <a href="#" onclick="confirmLogout()">Đăng Xuất</a>
  </div>

  <!-- Content -->
  <div class="container mt-5">
    <div>
      <table class="table bg-success mt-3 ">
        <thead>
          <tr>
            <th>Tên</th>
            <th>Email</th>
            <th>Tổng ngày Công</th> 
            <th>Số Ngày Nghỉ Phép</th>
            <th>Số Ngày Nghỉ Không Lương</th>
            <th>Số Ngày Nghỉ Còn Lại Trong Năm</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i<data.length; i++) { %>
            <tr>
              <td><%=data[i].FullName%></td>
              <td><%=data[i].Email%></td>
              <td><%=data[i].TotalWorkingDays%></td>
              <td><%=data[i].TotalNghiPhep%></td>
              <td><%=data[i].TotalNghiKhongLuong%></td>
              <td><%=data[i].RemainingLeaveDays%></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <script>
    function openSidebar() {
      document.getElementById("sidebar").style.width = "300px"; // Mở sidebar bằng cách đặt width là 300px
    }

    function closeSidebar() {
      document.getElementById("sidebar").style.width = "0"; // Đóng sidebar bằng cách đặt width là 0
    }

    function confirmLogout() {
      var confirmation = confirm("Bạn có chắc chắn muốn đăng xuất?");
      if (confirmation) {
        window.location.href = "/login";
        return false;
      }
    }
  </script>
</body>
</html>
